{
  "parser": "babel-eslint",
  "extends": "standard",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "env": {
    "browser": true
  },
  "rules": {
    "import/no-unresolved": ["error"],
    "semi": ["off"],
    "indent": ["off"],
    "no-new": ["warn"]
  },
  "globals": {
    "phaser": true
  },
  "settings": {
    "import/core-modules": [ "phaser", "pixi", "p2" ]
  }
}
